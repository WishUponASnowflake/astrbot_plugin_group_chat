{
  "list_mode": {
    "description": "名单模式：blacklist（黑名单模式）或 whitelist（白名单模式）",
    "type": "string",
    "options": ["blacklist", "whitelist"],
    "default": "blacklist"
  },
  "groups": {
    "description": "群组名单列表",
    "type": "list",
    "default": []
  },
  "base_probability": {
    "description": "基础回复概率",
    "type": "float",
    "default": 0.3
  },
  "willingness_threshold": {
    "description": "回复意愿阈值",
    "type": "float",
    "default": 0.5
  },
  "max_consecutive_responses": {
    "description": "最大连续回复次数",
    "type": "int",
    "default": 3
  },
  "focus_chat_enabled": {
    "description": "是否启用专注聊天",
    "type": "bool",
    "default": true
  },
  "min_interest_score": {
    "description": "最小兴趣度分数",
    "type": "float",
    "default": 0.6
  },
  "focus_timeout_seconds": {
    "description": "专注聊天超时时间（秒）",
    "type": "int",
    "default": 300
  },
  "focus_max_responses": {
    "description": "专注聊天最大回复次数",
    "type": "int",
    "default": 10
  },
  "fatigue_enabled": {
    "description": "是否启用疲劳系统",
    "type": "bool",
    "default": true
  },
  "fatigue_threshold": {
    "description": "疲劳阈值",
    "type": "int",
    "default": 5
  },
  "memory_enabled": {
    "description": "是否启用记忆系统（需要安装 astrbot_plugin_memora_connect 插件）",
    "type": "bool",
    "default": false
  },
  "max_memories_recall": {
    "description": "最大回忆记忆数量",
    "type": "int",
    "default": 10
  },
  "impression_enabled": {
    "description": "是否启用印象系统（需要安装 astrbot_plugin_memora_connect 插件）",
    "type": "bool",
    "default": false
  },
  "observation_mode_threshold": {
    "description": "观察模式阈值（群活跃度低于此值时进入观察）",
    "type": "float",
    "default": 0.2
  },
  "air_reading_enabled": {
    "description": "是否启用读空气功能",
    "type": "bool",
    "default": true
  },
  "air_reading_no_reply_marker": {
    "description": "读空气不回复标记（LLM返回此内容时不回复）",
    "type": "string",
    "default": "[DO_NOT_REPLY]"
  },
  "fatigue_decay_rate": {
    "description": "疲劳度衰减率（每小时衰减的比例，0-1之间）",
    "type": "float",
    "default": 0.5
  },
  "fatigue_reset_interval": {
    "description": "疲劳度重置间隔（小时）",
    "type": "int",
    "default": 6
  }
}
